<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/css/base.css') }}">
        {% endblock %}

        {% block javascripts %}
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous" defer></script>
        {% endblock %}

    </head>
    <body d-flex>
        {% block body %}
            {% block header %}
                <div class="sticky-top header-footer">
                    <div class="container">
                        <nav class="navbar navbar-expand-lg">
                        <a class="nav-link" href="#"><h1>BlogAstro</h1></a>
                            <button class="navbar-toggler" type="button" data-bs-target="#navbarCollapse" data-bs-toggle="collapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse d-lg-flex justify-content-end text-center" id="navbarCollapse">
                                <ul class="navbar-nav">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="#">Accueil</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"href="#">Article</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"href="#">Contact</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"href="#">CGU</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link"href="#">profil</a>
                                    </li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            {% endblock %}

            {% block footer %}
            <div class="header-footer fixed-bottom">
                <div class="container-fluid d-flex flex-row mt-4">
                    <p class="col-4"><a href="#">Nous contacter</a></p>
                    <p class="col-3"><a href="#">CGU</a></p>
                    <p class="col-4"><p>Copyright</p></p>
                </div>
            </div>
            {% endblock %}
        {% endblock %}

    </body>
</html>
